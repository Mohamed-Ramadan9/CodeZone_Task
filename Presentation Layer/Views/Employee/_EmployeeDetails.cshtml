@model Business_Layer.ViewModels.Employee.EmployeeListViewModel

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Employee Details</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Employee Code:</dt>
                    <dd class="col-sm-8">@Model.EmployeeCode</dd>
                    
                    <dt class="col-sm-4">Full Name:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">@Model.DepartmentName (@Model.DepartmentCode)</dd>
                    
                    <dt class="col-sm-4">Present Days:</dt>
                    <dd class="col-sm-8">@Model.PresentCount</dd>
                    
                    <dt class="col-sm-4">Absent Days:</dt>
                    <dd class="col-sm-8">@Model.AbsentCount</dd>
                    
                    <dt class="col-sm-4">Attendance %:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.AttendancePercentage >= 80 ? "bg-success" : Model.AttendancePercentage >= 60 ? "bg-warning" : "bg-danger")">
                            @Model.AttendancePercentage.ToString("F1")%
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group" role="group">
            <a asp-action="Edit" asp-route-id="@Model.EmployeeCode" class="btn btn-warning btn-sm">Edit</a>
            <button class="btn btn-info btn-sm" onclick="showAttendanceHistory(@Model.EmployeeCode)">View Attendance History</button>
        </div>
    </div>
</div> 